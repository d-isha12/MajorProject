<%- layout("/layouts/boilerplate") %>

<body>
    <div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Create a New Listing</h3>
        <form action="/listings" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Enter title" class="form-control">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="text" name="listing[image]" placeholder="Enter image url/link" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="number" placeholder="1200" class="form-control">
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="India" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Enter location" class="form-control">
            </div>
            <br>
            <button class="btn btn-dark mb-3 edit-btn">Add</button><br><br>
        </form>
    </div>
    </div>
</body>
